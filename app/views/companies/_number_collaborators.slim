.multisteps-container.container-fluid
  .row
    .steps-container.col-3
      .steps-content.single-opt
        .align-items-center
          .h5 Captura
          .h6.mb-10 = @company.try(:name)
        .step-progress.mt-20
          section.step-indicator
            .step.completed#step1
              .step-icon
                i.fa.fa-check aria-hidden='true'
            .indicator-line.active#ind1
            .step.completed#step2 style="opacity: 1"
              .step-icon
                i.fa.fa-check aria-hidden='true'
            .indicator-line.active#ind2 style="opacity: 1"
            .step.completed#step3 style="opacity: 1"
              .step-icon
                i.fa.fa-check
            .indicator-line.active#ind3
            .step.active#step4 style="opacity: 1"
              .step-icon
                i.fa.fa-hashtag
            .indicator-line#ind4
            .step.inactive#step5
              .step-icon
                i.fa.fa-file-alt

          section.step-indicator.description
            .step-desc#stepDesc1
              span
              .title Credenciales
            .step-desc#stepDesc2
              span
              .title Confirma tus datos
            .step-desc#stepDesc3
              span
              .title Actividad y producto
            .step-desc.active#stepDesc4
              span 
              .title Número de colaboradores
            .step-desc.inactive#stepDesc5
              span
              .title Archivos
    .step-content.col-9
      .nav-btns-container
        button.btn.btn-default.nav-step-btn.btn-prev type="button" onclick="prevPageNew('2','3')"
          i.fa.fa-chevron-left
          | Regresar
        button.btn.btn-default.nav-step-btn.btn-next type="button" id="buttonTwo" onclick="nextPageNew('4','3')"
          | Siguiente
          i.fa.fa-chevron-right
      .step-page.m-animate-fade-in-up
        .title
          div style=("color: #602BFA; width: 500px;")
            strong
              span style=("color: #3c3e6a; width: 500px") > Número de colaboradores
        .col-xl-12
          = form_for @company, validate: true, html: {class: ''} do |f|
            = render 'comision_row', f: f
            .col-xl-12
              = f.submit 'Guardar', class: 'btn btn-primary col-xl-12'