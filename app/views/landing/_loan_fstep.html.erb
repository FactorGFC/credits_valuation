            </div>

            <div class="col-md-6">
              <label class="label" for="email">Email</label>
              <%= text_field_tag :email, params[:email], class:"form-control", type: "email", id: "email_input", placeholder: "examplename@example.com", onkeyup: 'emailValidate()', required: true%>
