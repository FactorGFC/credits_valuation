.col-xl-12
  .m-portlet
    .m-portlet__head
      .m-portlet__head-caption
        .m-portlet__head-title
          span.m-portlet__head-icon.m--hide
            i.la.la-gear
          h3.m-portlet__head-text = t('.title')
    .m-portlet__body
      .row
        .col-lg-12
          = "#{t('.name')}: #{@balance_concept.name}"
        .col-lg-12
          = "#{t('.key')}: #{@balance_concept.key}"
        .col-lg-12
          = "#{t('.active')}: #{@balance_concept.active}"
        .col-lg-12
          = "#{t('.ancestry')}: #{@balance_concept.ancestry}"
    .m-portlet__foot
      .m-form__actions.m-form__actions--solid
        .row
          .col-lg-12
            =< link_to boards_path, class: 'btn btn-secondary'
              = t('helpers.go_to', resource: t('.back_resource'))
